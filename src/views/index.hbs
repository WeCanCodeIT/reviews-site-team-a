<div class="review-items-wrapper">
    {{#each reviews}}
        <div class="review-card-wrapper">
            <a href = "/review/{{id}}">
            <h3 class="review-card__title">{{reviewItem}}</h3>
            <img class="review-card__image" href="{{imgUrl}}"/>
            <h6 class="review-card__location">{{location}}</h6>
            </a>
        </div> 
    {{/each}}
</div>
<div class="review-form-wrapper">
    <form class="review-form__form" action="/" method="POST">
        <label> Cafe / Restuarant : 
            <select name="locationId">  
                {{#each locations}}
                    <option value="{{id}}">{{location}}</option>
                {{/each}}
            </select>
        </label>
        <label>Review Coffee: 
            <select name="reviewItem">  
                    <option value="Espresso (Solo)">Espresso (Solo)</option> 
                    <option value="Coffee">Coffee</option>
                    <option value="Cold Brew">Cold Brew</option> 
                    <option value="Tea">Tea</option> 
            </select>
            <br>
        </label>
        <label>Review Body:<input type="text" name="reviewBody"></label> 
        <label>
            Author: 
            <input type="text" name="author"></input>
        </label>
        <label> 
            Tags: <br>
        </label>
        <ul class="review-card__tags-list">
            <input class="review-card__tags-list-item"type="checkbox" name="tags" value=1>Bitter</input>
            <input class="review-card__tags-list-item"type="checkbox" name="tags" value="Water">Water</input>
            <input class="review-card__tags-list-item"type="checkbox" name="tags" value="Hot">Hot</input>
            <input class="review-card__tags-list-item"type="checkbox" name="tags" value="Cold">Cold</input>
            <input class="review-card__tags-list-item"type="checkbox" name="tags" value="Strong">Strong</input>
            <input class="review-card__tags-list-item"type="checkbox" name="tags" value="Flavored">Flavored</input>
            <input class="review-card__tags-list-item"type="checkbox" name="tags" value="Foamy">Foamy</input>
            <input class="review-card__tags-list-item"type="checkbox" name="tags" value="Misc">Miscellaneous</input>
        </ul>
        <button id="submitButton">¯\_(ツ)_/¯ </button>
    </form> 
</div>